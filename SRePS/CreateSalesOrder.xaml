        <TextBox x:Name="textbox_quantity" HorizontalAlignment="Left" Margin="834,292,0,0" TextWrapping="Wrap" Text="Enter Qty...." VerticalAlignment="Top" Width="154" Height="40" FontSize="20"/>
        <Button x:Name="button_additem" Content="Add Item" HorizontalAlignment="Left" Margin="1033,292,0,0" VerticalAlignment="Top" Height="40" Width="195" Click="button_additem_Click"/>
        <TextBox x:Name="textbox_error" HorizontalAlignment="Left" Margin="466,342,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="45" Width="475" FontSize="20" Background="#66FFFFFF"/>

    </Grid>
